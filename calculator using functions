/*calculator using functions*/
#include<stdio.h>

int main()
{
	int choice;
	printf("choose a operation:\n1.addition\n2.subtraction\n3.multiplication\n4.division\n");
	scanf("%d",&choice);
	if(choice==1)
	{
		add();
		
	}
	else if(choice==2)
	{
		sub();
	}
	else if(choice==3)
	{
		multi();
		
	}
	else if(choice==4)
	{
		div();
	}
	else 
	{
		printf("choose a correct option");
	}
}
	add()
	{
		int a,b,sum;
		printf("Enter the numbers to add");
		scanf("\n%d\n%d",&a,&b);
		sum=a+b;
		printf("The sum of two numbers is =%d",sum);
		
	}
	
	sub()
	{
		int a,b,c;
		printf("Enter two numbers ");
		scanf("\n%d\n%d",&a,&b);
		c=a-b;
		printf("The subtraction of two is =%d",c);
	}
	multi()
	{
		int a,b,d;
		printf("enter the two numbers");
		scanf("\n%d\n%d",&a,&b);
		d=a*b;
		printf("The multiplication is =%d",d);
		
	}
	div()
	{
		int a,b,e;
		printf("enter two numbers to divide");
		scanf("\n%d\n%d",&a,&b);
		e=a/b;
		printf("The division of two numbers is = %d",e);
	}
	
